<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
	x:Class="MauiApp7.ButtonPopup"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto, *">
        <Label Grid.Row="0" Text="Clicking On Text does not Work on IOS">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="Button_Clicked" />
            </Label.GestureRecognizers>
        </Label>        
        <RadioButton Grid.Row="1" Content="test 1" IsChecked="True"/>
        <RadioButton Grid.Row="2" Content="test 2" />
        <Button Grid.Row="3" Text="Click me to close" Clicked="Button_Clicked"/>
    </Grid>
</toolkit:Popup>